<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePass">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пропустить"
        android:textSize="15dp"
        android:textColor="#1A6FEE"
        android:fontFamily="@font/lato_regular"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#0000"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/lato_black"
        android:text="Создайте пароль"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Для защиты ваших персональных данных"
        android:textColor="#939396"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <com.chaos.view.PinView
        android:id="@+id/pinView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:inputType="number"
        android:itemBackground="@drawable/empty_dot"
        app:itemHeight="16dp"
        app:itemSpacing="12dp"
        app:itemWidth="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:lineColor="#0000"
        app:lineWidth="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinView2"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/num_button"
                android:text="1"
                android:textSize="24dp"
                android:fontFamily="@font/lato_black"
                android:stateListAnimator="@null"
                android:layout_marginRight="24dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/num_button"
                android:text="2"
                android:textSize="24dp"
                android:fontFamily="@font/lato_black"
                android:stateListAnimator="@null"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/num_button"
                android:text="3"
                android:textSize="24dp"
                android:fontFamily="@font/lato_black"
                android:stateListAnimator="@null"
                android:layout_marginLeft="24dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/num_button"
                android:text="4"
                android:textSize="24dp"
                android:fontFamily="@font/lato_black"
                android:stateListAnimator="@null"
                android:layout_marginRight="24dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/num_button"
                android:text="5"
                android:textSize="24dp"
                android:fontFamily="@font/lato_black"
                android:stateListAnimator="@null"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/num_button"
                android:text="6"
                android:textSize="24dp"
                android:fontFamily="@font/lato_black"
                android:stateListAnimator="@null"
                android:layout_marginLeft="24dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/num_button"
                android:text="7"
                android:textSize="24dp"
                android:fontFamily="@font/lato_black"
                android:stateListAnimator="@null"
                android:layout_marginRight="24dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/num_button"
                android:text="8"
                android:textSize="24dp"
                android:fontFamily="@font/lato_black"
                android:stateListAnimator="@null"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/num_button"
                android:text="9"
                android:textSize="24dp"
                android:fontFamily="@font/lato_black"
                android:stateListAnimator="@null"
                android:layout_marginLeft="24dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/num_button"
                android:text="0"
                android:textSize="24dp"
                android:fontFamily="@font/lato_black"
                android:stateListAnimator="@null"
                android:layout_marginLeft="104dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="35dp"
                android:layout_height="24dp"
                android:background="@drawable/del_icon"
                android:stateListAnimator="@null"
                android:layout_marginLeft="46dp"
                />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>